block scripts 
    script 
        include ../static/index.js
block style 
        style 
            include ../static/signup.css
            
block content

    .box1
        img(src='../static/logo.jpeg' alt='')
        p2
            a(href='/') X
        h2 Sign Up
        form(action='/signup', method='POST', class='myclass')
            input(type='Name' name='name' placeholder='First Name' required)
            input(type='Name' name='lname' placeholder='Last Name (Optional)')
            input(type='email' name='email' placeholder='Email Address' required)
            input(type='tel' name='phone' placeholder='Phone No.' minlength='10' maxlength='10' required)
            input(type='password' name='password' placeholder='Password' minlength='6' required)
            button.btn(type='submit') Sign Up
        p1
            | Already a Member ? 
            a#button(href='/login') Login 